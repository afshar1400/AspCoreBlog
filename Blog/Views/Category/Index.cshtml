@model IEnumerable<Category>


<div id="catTable" >
    @if (Model.Count() > 0)
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">title</th>
                    <th scope="col">description</th>
                    <th scope="col">delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td></td>
                        <td>@item.Title</td>
                        <td>@item.body</td>
                        <td >
                           
                                
                            <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger"> <i class="fas fa-trash"></i></a>
                     
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <h2>make one category</h2>
    }


</div>

<br />
<div class="my-3 p-1">
    <h3>add category</h3>
    <form method="post" id="addCategory" class="bg-dark text-white p-3">
        <div class="mb-3">
            <label for="title" class="form-label">title address</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="title of a category">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <input class="form-control" id="body" name="body" />
        </div>
        <div>
            <input name="id" hidden/>
        </div>
        <div class="mb-2">
            <input type="submit" value="submit" class="btn btn-outline-light w-100 d-block" />
        </div>
    </form>
</div>