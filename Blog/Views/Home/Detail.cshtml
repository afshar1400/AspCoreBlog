@model  BlogDetailWithCommentViewModel
@{
    ViewData["desc"] = Model.post.Title;
    var post = Model.post;
    IEnumerable<MainComment> cmts = Model.mainComments;
  }

<div class="row">
    <div class="col-md-12">
        <div class="card bg-dark text-white ">
            <img src="~/images/@post.ImageName" alt="@post.Title" class="card-img-top" />
            <div class="card-body p-3 m-2">
                <span class="card-subtitle text-white-50 fs-6">last update:@post.Created</span>
                <hr />
                <h2 class="card-title">@post.Title</h2>
                <p class="card-text">@Html.Raw(post.Body)</p>
                <p class="card-text">categoryId:@post.CategroyId</p>
            </div>
        </div>
        @* llist of the comment*@
        <div id="cmtList" class="my-3">
          <partial name="_cmtList" model="cmts"/>

        </div>
        @* form to make comment *@

    <div class="mt-3 bg-dark text-white">
        <h5 class="text-center">make a comment</h5>

        <form id="cmtForm" class="p-3" method="post" asp-controller="Comment" asp-action="CreateComment" >

            <input type="text" name="PostId" value="@post.Id" hidden />
            <div class="mb-3">
                <label for="Title" class="form-label">title</label>
                <input type="text" class="form-control" name="Title" placeholder="title">
            </div>
            <div class="mb-3">
                <label for="Body" class="form-label">Body</label>
                <input class="form-control" name="Body" id="cmtbody" placeholder="description"/>
            </div>
            <div class="my-1">
                <button type="submit" class="btn btn-outline-light w-100">submit</button>
            </div>
        </form>
    </div>
    </div>


</div>

